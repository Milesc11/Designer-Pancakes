---
import Layout from "@layouts/Layout.astro";
import { Image } from "astro:assets";
import PancakeButton from "../../src/assets/images/Group-4.png";
import Dropdown from "@components/Dropdown.astro";
import Button from "@components/Button.astro"
import {Content as Reasoning} from "../components/markdown/Reasoning.md"
import {Content as LoungeBonus} from "../components/markdown/LoungeBonus.md"
import {Content as HowTo} from "../components/markdown/How-To.md"
---

<Layout title="Project_1">
  <div class="page-container">
    <header>
      <nav>
        <h1 class="header-start">Why the Old Library Should Have a Pancake Maker</h1>
        <div class="btn-pancake">
          <Button>
            <h2 class="post">Why</h2>
          </Button>
          <Button>
            <h2 class="post">Bonus</h2>
          </Button>
          <Button>
            <h2 class="post">How To</h2>
          </Button>
          <Button>
            <h2 class="post">Options</h2>
          </Button>
        </div>
      </nav>     
    </header>
    <section class="body-section" id="pancake-reason">
      <h2>This is a Good Idea, Trust Me</h2>
      <div class="reason">
        <Reasoning />  
      </div> 
      <div class="hero-border">     
        <img 
        src="../../src/assets/images/Pancake-Maker.jpg"
        class="pancake-hero";
        />
      </div>
    </section>
     <section class="body-section" id="Bonus">
      <h2>Lounge Bonus</h2>
      <div class="bonus">
        <LoungeBonus />
      </div>
      <div class="hero-border">
        <img 
        src="../../src/assets/images/IMG_3455.jpeg"
        class="lounge-hero";
        />
      </div>
    </section>
    <section class="body-section" id="how-to">
      <h2>How it Would Work</h2>
      <div class="tutorial">
        <HowTo />
      </div>
      <Dropdown title="Available Options">
        <ul>
        <li>Maple syrup</li>
        <li>Whipped cream</li>
        <li>Chocolate chips</li>
        <li>Blueberries</li>
        </ul>
      </Dropdown>
      <div class="hero-border">
        <img 
        src="../../src/assets/images/IMG_3454.jpeg"
        class="desk-hero";
        />
      </div>
    </section>
    <section class="body-section" id="alternatives">
      <h2>Other Options</h2>
      <nav class="alt-grid">
      <a class="alt-list">
        <p>Waffles</p>
      </a>
      <a class="alt-list">
        <p>Toast</p>
      </a>
      <a class="alt-list">
        <p>French Toast</p>
      </a>
      <a class="alt-list">
        <p>Taiyaki</p>
      </a>
    </nav>
    </section>
    <a href="https://docs.google.com/document/d/13C7-kCTTVSB57x2g9iaKjl_Z_AjSTDTd_xHipEpWDtE/edit?tab=t.0">Project Layout</a>
  </div>
</Layout>

<style is:global>
  .page-container{
    max-width: 430px;
    display: flex;
    flex-direction: column;
  }
  .header-start{
    text-align: center;
    padding: 0;
    padding: 1rem;
  }
  .btn-pancake {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
  }
  .post{
    background: center no-repeat url(../../src/assets/images/Group-4.png);
    display: flex;
    justify-content: center;
    padding: 10px;
    width: 200px;
  }
  .body-section{
    margin-top: 1rem;
  }
  .body-section > h2{
    text-align: center;
    margin-bottom: 0.5rem;
  }
  .reason{
   padding-left: 10px;
   padding-right: 10px;
  }
  .hero-border{
    background-color: rgb(180, 175, 123);
    display: flex;
    justify-content: center;
    padding: 30px;
  }
  .pancake-hero{
    border: rgb(92, 61, 28) 5px solid;
    border-radius: 5px;
  }
  .bonus{
   padding-left: 10px;
   padding-right: 10px;
  }
  .lounge-hero{
    border: rgb(92, 61, 28) 5px solid;
    border-radius: 5px;
  }
  .tutorial{
   padding-left: 10px;
   padding-right: 10px;
  }
  .desk-hero{
    border: rgb(92, 61, 28) 5px solid;
    border-radius: 5px;
  }

</style>