---
import Layout from "@layouts/Layout.astro";
import { Image } from "astro:assets";
import PancakeButton from "/images/Group-4.png";
import Dropdown from "@components/Dropdown.astro";
import Button from "@components/Button.astro"
import {Content as Reasoning} from "../components/markdown/Reasoning.md"
import {Content as LoungeBonus} from "../components/markdown/LoungeBonus.md"
import {Content as HowTo} from "../components/markdown/How-To.md"
---

<Layout title="Project_1">
  <div class="page-container">
    <header>
      <nav>
        <h1 class="header-start">Why the Old Library Should Have a Pancake Maker</h1>
        <div class="btn-pancake">
          <a class="post-1" href="#pancake-reason">
              <h2>Why</h2>
          </a>
          <img alt="" src="/images/Group-4.png"/>
          <a class="post-2" href="#Bonus">
             <h2>Bonus</h2>
          </a>
           <img alt="" src="/images/Group-4.png"/>
          <a class="post-3" href="#howto">
            <h2>How To</h2>
          </a>
            <img alt="" src="/images/Group-4.png"/>
          <a class="post-4" href="#alternatives">
            <h2>Options</h2>
          </a>
           <img alt="" src="/images/Group-4.png"/>
        </div>
      </nav>     
    </header>
    <section class="body-section" id="pancake-reason">
      <div class="reason">
        <h2>This is a Good Idea, Trust Me</h2>
        <Reasoning />  
      </div> 
      <div class="hero-border">     
        <img 
        alt="automatic pancake maker"
        src="/images/Pancake-Maker.jpg"
        class="pancake-hero";
        />
      </div>
    <hr />
    </section>
     <section class="body-section" id="Bonus">  
      <div class="bonus">
        <h2>Lounge Bonus</h2>
        <LoungeBonus />
      </div>
      <div class="hero-border">
        <img 
        alt="desks in the old library"
        src="/images/IMG_3455.jpeg"
        class="lounge-hero";
        />
      </div>
    </section>
    <hr />
    <section class="body-section" id="howto">    
      <div class="tutorial">
        <h2>How it Would Work</h2>
        <HowTo />
        <Dropdown title="Available Options">
          <ul>
          <li>Maple syrup</li>
          <li>Whipped cream</li>
          <li>Chocolate chips</li>
          <li>Blueberries</li>
          </ul>
        </Dropdown> 
      </div>
      <div class="hero-border">
        <img 
        alt="nook in the old library"
        src="/images/IMG_3454.jpeg"
        class="desk-hero";
        />
      </div>
    </section>
    <hr />
    <section class="body-section" id="alternatives">
      <h2>Other Options</h2>
      <div class="food"> 
        <nav class="alt-grid">
        <a class="alt-list">
          <p>Waffles</p>
        </a>
        <a class="alt-list">
          <p>Toast</p>
        </a>
        <a class="alt-list">
          <p>French Toast</p>
        </a>
        <a class="alt-list">
          <p>Taiyaki</p>
        </a>
        </nav>
      </div>
    </section>
  </div>
</Layout>

